//printing each statement of string in the separate line
class Main {
    public static void main(String[] args) {
        String s="its me hussain";
        for(int i=0;i<s.length();i++){
            char c=s.charAt(i);
            System.out.println(c);
        }
    }
}
//printing each statement with the ASCII VALUES of string in the separate line
class Main {
    public static void main(String[] args) {
        String s="its me hussain";
        for(int i=0;i<s.length();i++){
            char c=s.charAt(i);
            System.out.println(c+" "+(int)c);
        }
    }
}
